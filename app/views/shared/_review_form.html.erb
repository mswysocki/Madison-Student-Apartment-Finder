<%= form_for([object, object.reviews.build]) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :review_body, :placeholder => "Comments", 
    				:style => "width: 950px; height: 100px; 
    							border: none; border-radius: 5px;" %>
  </div>
  <div class="field">
  	<%= f.label  :rating, "Rating" %>
	<%= f.radio_button :rating, 0 %>
	<%= f.radio_button :rating, 1 %>
	<%= f.radio_button :rating, 2 %>
	<%= f.radio_button :rating, 3 %>
	<%= f.radio_button :rating, 4 %>
	<%= f.radio_button :rating, 5 %>
  </div>
  
  <div class="field">
  	
  </div>
  
  <br />
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>