<div class="container">
	<div class="hero-unit">
        <h1>Sign In</h1>
        <hr style="border: 1px solid black;"/>
        <p>Sign in so you can use our cool features such as commenting on residences!</p>
        <br />
       	<%= form_for(:session, :url => sessions_path) do |f| %>
        	<div class="input-prepend input-append">
    			<span class="add-on"><i class="icon-envelope"></i></span><%= f.text_field :email, :placeholder => "Email Address" %>
    			<label class="checkbox inline">
    				<% params[:remember_me] = false %>
  					<%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember me
  				</label>
    			<br />
    			<span class="add-on"><i class="icon-lock"></i></span><%= f.password_field :password, :placeholder => "Password" %>
    			<%= link_to "Forgot password?", new_password_reset_path %>
    		</div>
      		<br /><br />
    		<%= f.submit "Sign in", :class => "btn-large btn-inverse" %>
        <% end %>
        <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
	</div><!--./hero-unit -->