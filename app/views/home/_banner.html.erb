<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= full_title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tag %>
  
    <!-- Le styles -->
    <style type="text/css">
      body {
        padding-top: 65px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
      .nav-header {
      	margin-left: auto;
      	margin-right: auto;
      	width: 45%;
      }
      #search_bedrooms_gte, #search_bedrooms_lte,
      #search_bathrooms_gte, #search_bathrooms_lte {
      	width: 75px;
      }
      #search_landlord_id_eq {
      	width: 175px;
      }
    </style>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>

  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to 'Madison Student Housing Finder', home_page_path, :class => "brand" %>
          <% if signed_in? %>
          	<div class="btn-group pull-right">
            	<a class="btn dropdown-toggle" data-toggle="dropdown" href="#" style="color: black">
              	<i class="icon-user"></i> <%= current_user.name %>
              	<span class="caret"></span>
            	</a>
            	<ul class="dropdown-menu">
              		<li><%= link_to "Profile", current_user %></li>
              		<li class="divider"></li>
              		<li><%= link_to "Settings", edit_user_path(current_user) %></li>
              		<li class="divider"></li>
              		<li><%= link_to "Sign out", signout_path, :method => :delete %></li>
            	</ul>
          	</div>
          <% end %>
          <div class="nav-collapse">
            <ul class="nav">
              <li><%= link_to 'Add a Listing', new_listing_path %></li>
              <li><%= link_to 'Landlord Info', all_landlords_path %></li>
              <li><%= link_to 'About Us', about_path %></li>
              <% if signed_in? && current_user.admin? %>
              	<li><%= link_to "Admin Page", admin_path %></li>
              <% end %>
            </ul>
            <% if !signed_in? %>
              <div class="form-inline navbar-form pull-right">
          	  <%= form_for(:session, :url => sessions_path) do |f| %>
				<!-- these labels are "checkbox" just to get them centered vertically -->
				<label class="checkbox"><%= link_to "Sign up!", signup_path, :style => "padding-right: 3px; color: white" %></label>
	    		<label class="checkbox"><%= link_to "Forgot password?", new_password_reset_path, :style => "padding-right: 3px; color: white" %></label>
	    		<%= f.text_field :email, :type => "text", :class => "input-small", :placeholder => "Email", :style => "margin-bottom: 0px" %>
	    		<%= f.password_field :password, :type => "password", :class => "input-small", :placeholder => "Password", :style => "margin-bottom: 0px" %>
				<% params[:remember_me] = false %>
  				<label class="checkbox" style="color: #eee">
  					<%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember me
  				</label>
 				<%= f.submit "Sign In", :type => "submit", :class => "btn-small", :style => "margin-bottom: 0px" %>
			  <% end %><!--./form -->
			  </div><!--./form-inline -->
          	<% end %><!--./if -->
          </div><!--./nav-collapse -->
        </div><!--./container -->
      </div><!--./navbar-inner -->
    </div><!--./navbar -->

	<!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/bootstrap-transition.js"></script>
    <script src="/javascripts/bootstrap-alert.js"></script>
    <script src="/javascripts/bootstrap-modal.js"></script>
    <script src="/javascripts/bootstrap-dropdown.js"></script>
    <script src="/javascripts/bootstrap-scrollspy.js"></script>
    <script src="/javascripts/bootstrap-tab.js"></script>
    <script src="/javascripts/bootstrap-tooltip.js"></script>
    <script src="/javascripts/bootstrap-popover.js"></script>
    <script src="/javascripts/bootstrap-button.js"></script>
    <script src="/javascripts/bootstrap-collapse.js"></script>
    <script src="/javascripts/bootstrap-carousel.js"></script>
    <script src="/javascripts/bootstrap-typeahead.js"></script>
    