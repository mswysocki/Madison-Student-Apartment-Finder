<tr>
  <td class="review">
    <span class="content"><%= review.review_body %></span>
    <br />
    Rating (out of 5): <span class="rating"><%= review.rating.to_i %></span>
    <br />
    <span class="timestamp">
      Posted <%= time_ago_in_words(review.created_at) %> ago.
    </span>
    <span class="name">
      By <%= get_user(review.user_id).name %>.
    </span>
    <span class="helpfulness_button">
    	Helpful button goes here.
    </span>
    <span class="flag_button">
    	Flag button goes here.
    </span>

 	<% if signed_in? && (current_user.id == review.user_id  || current_user.admin?) %>
	
		<% if :controller == 'lists' %>
	 		<%= link_to "delete", list_review_path(review.list_id, review.id),
	 							:method => :delete,
	                            :confirm => "Are you sure?",
	                            :title => "Delete '#{review.review_body}'" %>
	    <% else %>
	    	<%= link_to "delete", user_review_path(review.user_id, review.id),
	 							:method => :delete,
	                            :confirm => "Are you sure?",
	                            :title => "Delete '#{review.review_body}'" %>
	    <% end %>
    <% end %>
  </td>
</tr>

